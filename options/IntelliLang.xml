<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="XML" injector-id="xml">
      <display-name>column/@name</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("name")).withParent(xmlTag().withLocalName(string().equalTo("column")).withNamespace(string().equalTo("http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd")))]]></place>
    </injection>
    <injection language="XML" injector-id="xml">
      <display-name>id</display-name>
      <place><![CDATA[xmlTag().withLocalName(string().equalTo("id")).withNamespace(string().equalTo("http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"))]]></place>
    </injection>
    <injection language="XML" injector-id="xml">
      <display-name>package/@extends</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("extends")).withParent(xmlTag().withLocalName(string().equalTo("package")).withNamespace(string().equalTo("http://struts.apache.org/dtds/struts-2.5.dtd")))]]></place>
    </injection>
  </component>
</application>